  "grammar": {
    "point": "Possessive adjectives (my, your, his, her, our, their)",
    "rules": [
      {
        "id": "pack-000007:grammar-rule-001",
        "title": "Possessive Adjectives",
        "explanation": "Use possessive adjectives before nouns to show ownership: my, your, his, her, its, our, their.",
        "examples": ["This is my mother.", "Her name is Sarah.", "Their house is big."],
        "koreanTip": "한국어의 '나의, 너의' 등에 해당하지만, 영어에서는 항상 명사 앞에 옵니다."
      }
    ],
    "exercises": [
      {
        "id": "pack-000007:grammar-ex-001",
        "type": "fill_blank",
        "question": "This is ___ sister. (I)",
        "options": ["my", "me", "I", "mine"],
        "correctAnswer": "my",
        "explanation": "Before a noun, use 'my' not 'I'.",
        "koreanTip": "명사 앞에서는 소유격 'my'를 씁니다."
      },
      {
        "id": "pack-000007:grammar-ex-002",
        "type": "fill_blank",
        "question": "___ father is a doctor. (She)",
        "options": ["She", "Her", "Hers", "She's"],
        "correctAnswer": "Her",
        "explanation": "Before a noun, use 'her' not 'she'.",
        "koreanTip": "명사 앞에서는 소유격 'her'를 씁니다."
      },
      {
        "id": "pack-000007:grammar-ex-003",
        "type": "fill_blank",
        "question": "They love ___ children.",
        "options": ["they", "their", "them", "theirs"],
        "correctAnswer": "their",
        "explanation": "Before a noun, use 'their'.",
        "koreanTip": "명사 앞에서는 소유격 'their'를 씁니다."
      },
      {
        "id": "pack-000007:grammar-ex-004",
        "type": "multiple_choice",
        "question": "Which is correct?",
        "options": ["He brother is tall.", "His brother is tall.", "Him brother is tall.", "He's brother is tall."],
        "correctAnswer": "His brother is tall.",
        "explanation": "'His' is the possessive adjective for 'he'."
      }
    ]
  },

