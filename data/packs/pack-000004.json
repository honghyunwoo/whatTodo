        { "name": "SYMPTOM", "options": ["headache", "fever", "cold", "stomachache"] },
        { "name": "BODY PART", "options": ["head", "stomach", "throat", "back"] },
        { "name": "FEELING", "options": ["tired", "weak", "dizzy", "sick"] }
      ],
      "correctExample": "Hello, doctor. I have a headache. My head hurts. I feel tired."
    },
    "free": {
      "id": "pack-000004:writing-free",
      "topic": "Describe Your Health",
      "prompt": "Write about a time you were sick. What symptoms did you have? What did you do?",
      "minWords": 25,
      "maxWords": 60,
      "checklist": [
        { "item": "Describe at least 2 symptoms", "required": true },
        { "item": "Use 'I have' or 'hurts' correctly", "required": true }
      ]
    }
  },

