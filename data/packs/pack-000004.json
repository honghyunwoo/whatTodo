  "grammar": {
    "point": "I have + Symptom / My ... hurts",
    "rules": [
      {
        "id": "pack-000004:grammar-rule-001",
        "title": "Describing Symptoms",
        "explanation": "Use 'I have + symptom' or 'My + body part + hurts' to describe health problems.",
        "examples": ["I have a headache.", "My stomach hurts.", "I have a fever."],
        "koreanTip": "'아프다'를 영어로 할 때 'hurts'를 쓰거나 'I have a~'로 증상을 말해요."
      }
    ],
    "exercises": [
      {
        "id": "pack-000004:grammar-ex-001",
        "type": "fill_blank",
        "question": "I have a ___. My head hurts.",
        "options": ["headache", "stomachache", "toothache", "fever"],
        "correctAnswer": "headache"
      },
      {
        "id": "pack-000004:grammar-ex-002",
        "type": "fill_blank",
        "question": "My ___ hurts. I ate too much.",
        "options": ["head", "stomach", "arm", "leg"],
        "correctAnswer": "stomach"
      },
      {
        "id": "pack-000004:grammar-ex-003",
        "type": "multiple_choice",
        "question": "Which is correct for having a fever?",
        "options": ["I am fever.", "I have fever.", "I have a fever.", "I fever."],
        "correctAnswer": "I have a fever."
      }
    ]
  },

