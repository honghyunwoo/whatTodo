  "writing": {
    "template": {
      "id": "pack-000001:writing-template",
      "type": "sentence_assembly",
      "prompt": "Write a self-introduction using the template.",
      "template": "Hello! My name is [NAME]. I am a [JOB/ROLE]. I am from [COUNTRY]. Nice to meet you!",
      "slots": [
        { "name": "NAME", "hint": "Your name" },
        { "name": "JOB/ROLE", "options": ["student", "teacher", "worker"], "hint": "Your role" },
        { "name": "COUNTRY", "hint": "Your country" }
      ],
      "correctExample": "Hello! My name is Minho. I am a student. I am from Korea. Nice to meet you!"
    },
    "free": {
      "id": "pack-000001:writing-free",
      "topic": "Introduce Yourself",
      "prompt": "Write a short introduction about yourself. Include your name, what you do, and where you are from.",
      "minWords": 20,
      "maxWords": 50,
      "checklist": [
        { "item": "Include your name", "required": true },
        { "item": "Mention your role (student, worker, etc.)", "required": true },
        { "item": "Say where you are from", "required": true },
        { "item": "Use 'am/is/are' correctly", "required": true }
      ]
    }
  },

