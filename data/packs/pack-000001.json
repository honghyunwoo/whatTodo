        { "speaker": "user", "text": "Nice to meet you too! I am from ___.", "hint": "Say where you're from" },
        { "speaker": "partner", "text": "Oh, that's nice! I'm from America." }
      ],
      "checklistItems": ["Greet the partner", "Say your name", "Say where you're from", "Respond to the partner's greeting"]
    }
  },

  "koreanErrors": [
