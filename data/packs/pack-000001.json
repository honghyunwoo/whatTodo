{
  "id": "pack-000001",
  "level": "A1",
  "topic": "Greetings and Introductions",
  "canDo": "I can introduce myself and greet others in simple situations.",
  "functionId": "greetings",
  "difficulty": 1,
  "skills": ["grammar", "vocab", "speaking"],
  "estimatedMinutes": 15,
  "tags": ["greetings", "introduction", "daily", "social"],

  "grammar": {
    "point": "Be verb (am/is/are) with pronouns",
    "rules": [
      {
        "id": "pack-000001:grammar-rule-001",
        "title": "I am / You are / He is",
        "explanation": "Use 'am' with 'I', 'are' with 'you/we/they', 'is' with 'he/she/it'.",
        "examples": ["I am a student.", "You are my friend.", "She is a teacher."],
        "koreanTip": "한국어에는 be동사가 없어서 'I student'라고 하기 쉬워요. 꼭 am/is/are를 넣어주세요!"
      }
    ],
    "exercises": [
      {
        "id": "pack-000001:grammar-ex-001",
        "type": "fill_blank",
        "question": "I ___ a student.",
        "options": ["am", "is", "are", "be"],
        "correctAnswer": "am",
        "explanation": "With 'I', always use 'am'.",
        "koreanTip": "'I'와 함께는 항상 'am'을 씁니다."
      },
      {
        "id": "pack-000001:grammar-ex-002",
        "type": "fill_blank",
        "question": "She ___ my teacher.",
        "options": ["am", "is", "are", "be"],
        "correctAnswer": "is",
        "explanation": "With 'she/he/it', use 'is'.",
        "koreanTip": "'she/he/it'과 함께는 'is'를 씁니다."
      },
      {
        "id": "pack-000001:grammar-ex-003",
        "type": "fill_blank",
        "question": "We ___ friends.",
        "options": ["am", "is", "are", "be"],
        "correctAnswer": "are",
        "explanation": "With 'we/you/they', use 'are'.",
        "koreanTip": "'we/you/they'와 함께는 'are'를 씁니다."
      },
      {
        "id": "pack-000001:grammar-ex-004",
        "type": "multiple_choice",
        "question": "Which is correct?",
        "options": ["I is happy.", "I am happy.", "I are happy.", "I be happy."],
        "correctAnswer": "I am happy.",
        "explanation": "'I' always goes with 'am'."
      }
    ]
  },

  "vocabulary": {
    "words": [
      {
        "id": "pack-000001:vocab-001",
        "word": "hello",
        "pronunciation": "/həˈloʊ/",
        "meaning": "a greeting",
        "meaningKo": "안녕하세요",
        "partOfSpeech": "interjection",
        "examples": ["Hello! How are you?", "Hello, my name is Tom."],
        "koreanTip": "격식체/비격식체 모두 사용 가능한 기본 인사말"
      },
      {
        "id": "pack-000001:vocab-002",
        "word": "goodbye",
        "pronunciation": "/ɡʊdˈbaɪ/",
        "meaning": "a farewell",
        "meaningKo": "안녕히 가세요/계세요",
        "partOfSpeech": "interjection",
        "examples": ["Goodbye! See you tomorrow.", "Say goodbye to your friends."],
        "koreanTip": "헤어질 때 사용하는 인사말"
      },
      {
        "id": "pack-000001:vocab-003",
        "word": "name",
        "pronunciation": "/neɪm/",
        "meaning": "what someone is called",
        "meaningKo": "이름",
        "partOfSpeech": "noun",
        "examples": ["My name is Sarah.", "What is your name?"],
        "koreanTip": "자기소개할 때 가장 먼저 말하는 것"
      },
      {
        "id": "pack-000001:vocab-004",
        "word": "nice",
        "pronunciation": "/naɪs/",
        "meaning": "pleasant, good",
        "meaningKo": "좋은, 반가운",
        "partOfSpeech": "adjective",
        "examples": ["Nice to meet you.", "It's a nice day."],
        "koreanTip": "'Nice to meet you'는 처음 만났을 때 하는 인사"
      },
      {
        "id": "pack-000001:vocab-005",
        "word": "meet",
        "pronunciation": "/miːt/",
        "meaning": "to come together",
        "meaningKo": "만나다",
        "partOfSpeech": "verb",
        "examples": ["Nice to meet you.", "Let's meet tomorrow."],
        "koreanTip": "'만나서 반갑습니다'는 'Nice to meet you'"
      }
    ],
    "collocations": ["Nice to meet you", "My name is...", "How are you?", "I'm fine, thank you"]
  },

  "reading": {
    "id": "pack-000001:reading",
    "title": "Meeting a New Friend",
    "passage": "Hello! My name is Tom. I am a student. I am from Korea. Nice to meet you! What is your name? I am happy to meet you today.",
    "wordCount": 30,
    "questions": [
      {
        "id": "pack-000001:reading-q-001",
        "type": "comprehension",
        "question": "What is the speaker's name?",
        "options": ["Sarah", "Tom", "Korea", "Student"],
        "correctAnswer": "Tom",
        "explanation": "The passage says 'My name is Tom.'"
      },
      {
        "id": "pack-000001:reading-q-002",
        "type": "comprehension",
        "question": "Where is Tom from?",
        "options": ["America", "Japan", "Korea", "China"],
        "correctAnswer": "Korea",
        "explanation": "The passage says 'I am from Korea.'"
      },
      {
        "id": "pack-000001:reading-q-003",
        "type": "vocabulary",
        "question": "What does 'Nice to meet you' mean?",
        "options": ["만나서 반갑습니다", "안녕히 가세요", "다음에 봐요", "잘 자요"],
        "correctAnswer": "만나서 반갑습니다",
        "explanation": "'Nice to meet you' is a greeting when meeting someone for the first time."
      }
    ]
  },

  "listening": {
