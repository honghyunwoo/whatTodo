      "expressions": [
        { "en": "I'm going to...", "ko": "...할 거예요.", "formality": "neutral" },
        { "en": "I'm planning to...", "ko": "...할 계획이에요.", "formality": "neutral" },
        { "en": "I'm thinking of...", "ko": "...할까 생각 중이에요.", "formality": "neutral" },
        { "en": "I want to...", "ko": "...하고 싶어요.", "formality": "neutral" },
        { "en": "I hope to...", "ko": "...하길 바라요.", "formality": "neutral" },
        { "en": "Maybe I'll...", "ko": "아마 ...할 것 같아요.", "formality": "neutral" }
      ],
      "contexts": ["future plans", "career goals", "weekend plans"]
