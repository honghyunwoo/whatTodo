        { "en": "What time works for you?", "ko": "몇 시가 좋아요?", "formality": "neutral" },
        { "en": "Where shall we meet?", "ko": "어디서 만날까요?", "formality": "neutral" },
        { "en": "I can make it at...", "ko": "...에 갈 수 있어요.", "formality": "neutral" },
        { "en": "That works for me.", "ko": "저는 괜찮아요.", "formality": "neutral" },
        { "en": "I'm sorry, I can't make it.", "ko": "죄송해요, 못 가겠어요.", "formality": "neutral" }
      ],
      "contexts": ["meeting friends", "appointments", "scheduling"]
    },
    {
      "id": "func-a2-007",
      "name": "expressing_feelings",
      "nameKo": "감정 표현 (확장)",
      "canDo": "I can express a range of feelings and reactions.",
      "expressions": [
        { "en": "I'm really excited about...", "ko": "...가 정말 기대돼요.", "formality": "neutral" },
        { "en": "I'm disappointed that...", "ko": "...해서 실망했어요.", "formality": "neutral" },
        { "en": "I'm worried about...", "ko": "...가 걱정돼요.", "formality": "neutral" },
        { "en": "I'm bored.", "ko": "지루해요.", "formality": "informal" },
        { "en": "I'm surprised that...", "ko": "...해서 놀랐어요.", "formality": "neutral" },
        { "en": "I feel nervous.", "ko": "긴장돼요.", "formality": "neutral" }
      ],
      "contexts": ["sharing emotions", "reacting to news", "expressing concerns"]
    },
