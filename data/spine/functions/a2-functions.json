      "expressions": [
        { "en": "Let's...", "ko": "...하자.", "formality": "informal" },
        { "en": "How about...?", "ko": "...하는 건 어때요?", "formality": "neutral" },
        { "en": "What about...?", "ko": "...는 어때요?", "formality": "neutral" },
        { "en": "Shall we...?", "ko": "...할까요?", "formality": "polite" },
        { "en": "Would you like to...?", "ko": "...하고 싶으세요?", "formality": "polite" },
        { "en": "We could...", "ko": "...할 수 있어요.", "formality": "neutral" }
      ],
      "contexts": ["planning activities", "making plans with friends", "weekend plans"]
